<div id="post_content">
	<h1 class="title">
		<%= @post.title %>
	</h1>

	<p class="date">
		Submitted <%= time_ago_in_words(@post.created_at) %> Ago
	</p>

	 <%= render :partial => @post %>



	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>

	<p class="body">
		<%= @post.body %>
	</p>

	<div id="comments">
		<h2>There are <%= @post.comments.count %> Comments</h2>
		<p><%= render :partial => @post.comments %></p>

		<h3>Add a comment:</h3>

	</div>
</div>



	<h2>Comments</h2>
	<div id="comments">
		
	</div>

	<%= form_for [@post, Comment.new] do |f| %>
	  <p><%= f.label :body, "New comment" %>
	  	<br/>
	  	  <%= f.text_area :body %>
	    </p>
	    <p><%= f.submit "Add comment" %></p>
	<% end %>

